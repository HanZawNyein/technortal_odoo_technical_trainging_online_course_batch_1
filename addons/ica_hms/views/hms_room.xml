<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="hms_room_view_list" model="ir.ui.view">
        <field name="name">hms_room_view_list</field>
        <field name="model">hms.room</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="hotel_id"/>
                <field name="type" widget="badge"
                       decoration-info="type == 'normal'"
                       decoration-warning="type=='vip'"
                       decoration-success="type == 'vvip'"/>
            </list>
        </field>
    </record>

    <record id="hms_room_view_form" model="ir.ui.view">
        <field name="name">hms_roon_view_form</field>
        <field name="model">hms.room</field>
        <field name="arch" type="xml">
            <form string="hms_room_form">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="hotel_id"/>
                        </group>
                        <group>
                            <field name="type" widget="radio"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hms_room_action" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hms.room</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>